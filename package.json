{
  "name": "brookjs",
  "version": "0.7.0",
  "description": "A framework for building streaming applications.",
  "main": "cjs/index.js",
  "browser": "dist/brook.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "dist",
    "cjs",
    "es",
    "src"
  ],
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint src --cache true --fix",
    "test:unit": "cross-env BABEL_ENV=test karma start karma.conf.js --single-run",
    "dev": "cross-env BABEL_ENV=test karma start karma.conf.js",
    "clean": "rimraf cjs dist es coverage",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --ignore __tests__ --out-dir cjs",
    "build:es": "cross-env BABEL_ENV=es babel src --ignore __tests__ --out-dir es",
    "build:umd": "cross-env BABEL_ENV=es webpack src/index.js dist/brook.js",
    "build:umd:min": "cross-env BABEL_ENV=es webpack src/index.js dist/brook.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "prepublishOnly": "npm run clean && npm test && npm run build"
  },
  "authors": [
    "James DiGioia <jamesorodig@gmail.com> (http://jamesdigioia.com)",
    "Valtech (https://www.valtech.com/)"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-ramda": "^1.1.3",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chai-dom": "^1.4.0",
    "chai-spies": "^0.7.1",
    "core-js": "^2.4.1",
    "cross-env": "^4.0.0",
    "eslint": "^3.2.2",
    "eslint-config-valtech": "^1.0.0",
    "handlebars": "^4.0.6",
    "handlebars-loader": "^1.4.0",
    "json-loader": "^0.5.4",
    "karma": "^1.4.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.30",
    "karma-webpack": "^2.0.1",
    "mocha": "^3.2.0",
    "phantomjs-prebuilt": "^2.1.7",
    "rimraf": "^2.5.4",
    "simulant": "^0.2.2",
    "sinon": "^2.0.0-pre.2",
    "sinon-chai": "^2.8.0",
    "webpack": "^2.2.0",
    "webpack-merge": "^2.4.0"
  },
  "dependencies": {
    "kefir": "^3.3.0",
    "morphdom": "^2.0.1",
    "ramda": "^0.23.0",
    "redux": "^3.5.2"
  }
}
