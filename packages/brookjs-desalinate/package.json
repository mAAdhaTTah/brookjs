{
  "name": "brookjs-desalinate",
  "version": "0.0.0",
  "description": "Testing tools for brookjs components.",
  "main": "cjs/index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:type && npm run test:browser && if test \"$SAUCE_USERNAME\" != ''; then npm run test:ci; fi",
    "test:lint": "eslint src --cache true --fix",
    "test:type": "flow check",
    "test:node": "cross-env NODE_ENV=test:node nyc tape -r babel-register **/__tests__/*.spec.js | tap-spec",
    "test:browser": "cross-env NODE_ENV=test:browser karma start karma.conf.js --single-run",
    "test:ci": "cross-env NODE_ENV=test:browser karma start karma.conf.ci.js --single-run",
    "dev": "cross-env NODE_ENV=test karma start karma.conf.js",
    "clean": "rimraf cjs dist es coverage",
    "build:commonjs": "cross-env NODE_ENV=commonjs babel src --ignore __tests__ --out-dir cjs",
    "build:es": "cross-env NODE_ENV=es babel src --ignore __tests__ --out-dir es",
    "build:umd": "cross-env NODE_ENV=es webpack src/index.js dist/brook.js",
    "build:umd:min": "cross-env NODE_ENV=es webpack src/index.js dist/brook.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run clean && npm test && npm run build"
  },
  "author": "James DiGioia <jamesorodig@gmail.com> (http://jamesdigioia.com)",
  "license": "MIT",
  "dependencies": {
    "brookjs": "^0.8.6",
    "diffhtml": "^1.0.0-beta.8",
    "kefir": "^3.7.4",
    "ramda": "^0.24.1",
    "symbol-observable": "^1.0.4",
    "tape": "^4.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-ramda": "^1.4.3",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "bl": "^1.2.1",
    "core-js": "^2.5.1",
    "cross-env": "^5.0.5",
    "eslint": "^4.7.2",
    "eslint-config-valtech": "^1.1.0",
    "eslint-import-resolver-node": "^0.3.1",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.55.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-spec-reporter": "^0.0.31",
    "karma-tap": "^3.1.1",
    "karma-tap-pretty-reporter": "^3.0.5",
    "karma-webpack": "^2.0.4",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.2",
    "tap-spec": "^4.1.1",
    "webpack": "^3.6.0",
    "webpack-merge": "^4.1.0"
  }
}
