{
  "name": "brookjs-desalinate",
  "version": "0.11.11",
  "description": "Testing tools for brookjs components.",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "keywords": [
    "kefir",
    "browser",
    "chai",
    "chai-plugin",
    "brookjs",
    "observables"
  ],
  "scripts": {
    "test": "npm run test:lint && npm run test:type && npm run test:unit:node && npm run test:unit:karma",
    "test:lint": "eslint src --cache true --fix",
    "test:type": "flow check",
    "test:unit:node": "beaver test unit --coverage true --env test:node",
    "test:unit:karma": "cross-env NODE_ENV=test:browser karma start karma.conf.js --single-run",
    "test:unit:ci": "cross-env NODE_ENV=test:browser karma start karma.conf.ci.js --single-run",
    "dev": "cross-env NODE_ENV=test karma start karma.conf.js",
    "clean": "rimraf cjs dist es coverage",
    "build:commonjs": "cross-env NODE_ENV=commonjs babel src --ignore __tests__ --out-dir cjs",
    "build:es": "cross-env NODE_ENV=es babel src --ignore __tests__ --out-dir es",
    "build:umd": "cross-env NODE_ENV=es webpack src/index.js dist/brook.js",
    "build:umd:min": "cross-env NODE_ENV=es webpack src/index.js dist/brook.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "author": "James DiGioia <jamesorodig@gmail.com> (http://jamesdigioia.com)",
  "license": "MIT",
  "dependencies": {
    "chai-kefir": "^2.0.4",
    "deep-eql": "^3.0.1",
    "diffhtml": "^1.0.0-beta.8",
    "lolex": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-brookjs": "^0.11.3",
    "brookjs-cli": "^0.11.11",
    "chai": "^4.1.2",
    "core-js": "^2.5.1",
    "cross-env": "^5.0.5",
    "deep-eql": "^3.0.1",
    "eslint": "^4.7.2",
    "eslint-config-valtech": "^1.1.0",
    "eslint-import-resolver-node": "^0.3.1",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.74.0",
    "jsdom": "^11.5.1",
    "jsdom-global": "^3.0.2",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^2.0.4",
    "lolex": "^2.3.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.12.0",
    "webpack-merge": "^4.1.0"
  }
}
